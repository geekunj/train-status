<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="2dp">
        <TextView
            android:layout_width="25dp"
            android:paddingLeft="2dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:id="@+id/tv_route_serial_no_val"
            android:text="10"
            android:textSize="13dp"/>

        <TextView
            android:layout_width="200dp"
            android:paddingLeft="4dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_route_station_val"
            android:layout_marginLeft="5dp"
            android:text="LTT- Lokmanyatilak"
            android:fontFamily="@font/gotham"
            android:textSize="13dp"/>

        <TextView
            android:layout_width="50dp"
            android:textSize="13dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:id="@+id/tv_route_arrival_time_val"
            android:text="Source"
            android:fontFamily="@font/gotham"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="50dp"
            android:textSize="13dp"
            android:layout_marginLeft="5dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:id="@+id/tv_route_dep_time_val"
            android:text="24:24"
            android:fontFamily="@font/gotham"/>

        <TextView
            android:layout_width="50dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_route_distance_val"
            android:textSize="13dp"
            android:textAlignment="center"
            android:fontFamily="@font/gotham"
            android:text="24:24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_route_day_val"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"
            android:textSize="13dp"
            android:fontFamily="@font/gotham"
            android:text="44"/>
    </LinearLayout>

</RelativeLayout>

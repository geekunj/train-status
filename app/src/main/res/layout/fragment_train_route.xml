<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context="io.tnine.trainstatus.Fragments.TrainRouteFragment">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/train_det"
        android:elevation="10dp"
        android:layout_marginBottom="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_route_train_number"
                    android:textStyle="bold"
                    android:fontFamily="@font/gotham"
                    android:textColor="@color/colorAccent"
                    android:textSize="22dp"
                    android:text="54412"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:id="@+id/tv_route_train_name"
                    android:layout_toRightOf="@+id/tv_route_train_number"
                    android:layout_marginLeft="28dp"
                    android:layout_centerVertical="true"
                    android:textSize="15dp"
                    android:fontFamily="@font/gotham"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="MTC-RE PASSENGER"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_runs_on_label"
                    android:textSize="16dp"
                    android:text="Runs on: "
                    android:fontFamily="@font/gotham"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_route_runs_sun"
                    android:textSize="15dp"
                    android:fontFamily="@font/gotham"
                    android:text="S"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_route_runs_mon"
                    android:textSize="15dp"
                    android:fontFamily="@font/gotham"
                    android:text="M"
                    android:layout_marginLeft="8dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_route_runs_tue"
                    android:textSize="15dp"
                    android:fontFamily="@font/gotham"
                    android:layout_marginLeft="8dp"
                    android:text="T"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_route_runs_wed"
                    android:layout_marginLeft="8dp"
                    android:textSize="15dp"
                    android:fontFamily="@font/gotham"
                    android:text="W"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_route_runs_thu"
                    android:layout_marginLeft="8dp"
                    android:textSize="15dp"
                    android:fontFamily="@font/gotham"
                    android:text="T"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_route_runs_fri"
                    android:layout_marginLeft="8dp"
                    android:textSize="15dp"
                    android:fontFamily="@font/gotham"
                    android:text="F"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_route_runs_sat"
                    android:layout_marginLeft="8dp"
                    android:textSize="15dp"
                    android:fontFamily="@font/gotham"
                    android:text="S"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/train_det"
        android:layout_marginTop="8dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:cardElevation="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="2dp"
                        android:fontFamily="@font/gotham"
                        android:textColor="@color/accent"
                        android:id="@+id/tv_route_serial_no_label"
                        android:text="Sr."
                        android:gravity="center"
                        android:textSize="12dp"/>

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_route_station_label"
                        android:textAlignment="center"
                        android:layout_marginLeft="5dp"
                        android:text="Station"
                        android:fontFamily="@font/gotham"
                        android:textColor="@color/accent"
                        android:textSize="12dp"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_route_arrival_time_label"
                        android:textAlignment="center"
                        android:textColor="@color/accent"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/gotham"
                        android:text="Arr."
                        android:textSize="12dp"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_route_departure_time_label"
                        android:textAlignment="center"
                        android:fontFamily="@font/gotham"
                        android:textColor="@color/accent"
                        android:layout_marginLeft="5dp"
                        android:text="Dep."
                        android:textSize="12dp"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_route_distance_label"
                        android:layout_marginLeft="5dp"
                        android:textAlignment="center"
                        android:textColor="@color/accent"
                        android:fontFamily="@font/gotham"
                        android:text="Dist."
                        android:textSize="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_route_day_label"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/accent"
                        android:textAlignment="center"
                        android:fontFamily="@font/gotham"
                        android:text="Day"
                        android:textSize="12dp"/>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rv_route_train_stations"
                    android:layout_marginTop="2dp">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>




        </android.support.v7.widget.CardView>
    </HorizontalScrollView>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="7dp"
    android:clipToPadding="false">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="4dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:id="@+id/crdv_trains_bw_stations_card">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_trainnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="20215"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginTop="4dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_runs_label"
                android:fontFamily="@font/gotham"
                android:layout_marginTop="4dp"
                android:layout_alignParentRight="true"
                android:text="Runs on: "
                android:layout_marginRight="50dp"/>

            <TextView
                android:id="@+id/tv_trainname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_trainnumber"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/gotham"
                android:textColor="@color/colorAccent"
                />


            <TextView
                android:id="@+id/tv_runs_on_sunday_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_trainnumber"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/gotham"
                android:text="S"
                android:visibility="visible"
                android:layout_marginRight="130dp"/>

            <TextView
                android:id="@+id/tv_runs_on_monday_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_trainnumber"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/gotham"
                android:layout_marginRight="110dp"
                android:visibility="visible"
                android:text="M"/>

            <TextView
                android:id="@+id/tv_runs_on_tuesday_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_trainnumber"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/gotham"
                android:visibility="visible"
                android:layout_marginRight="90dp"
                android:text="T"/>

            <TextView
                android:id="@+id/tv_runs_on_wednesday_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_trainnumber"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/gotham"
                android:layout_marginRight="70dp"
                android:visibility="visible"
                android:text="W"/>

            <TextView
                android:id="@+id/tv_runs_on_thursday_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_trainnumber"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/gotham"
                android:layout_marginRight="50dp"
                android:visibility="visible"
                android:text="T"/>

            <TextView
                android:id="@+id/tv_runs_on_friday_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_trainnumber"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/gotham"
                android:layout_marginRight="30dp"
                android:visibility="visible"
                android:text="F"/>

            <TextView
                android:id="@+id/tv_runs_on_saturday_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_trainnumber"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/gotham"
                android:layout_marginRight="10dp"
                android:visibility="visible"
                android:text="S"/>




            <TextView
                android:id="@+id/tv_trainsource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_trainname"
                android:layout_above="@+id/tv_starttimelabel"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/gotham"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tv_traindest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_trainname"
                android:layout_marginRight="4dp"
                android:fontFamily="@font/gotham"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tv_starttimelabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_traindest"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/gotham"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tv_starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham"
                android:layout_below="@+id/tv_traindest"

                android:layout_toRightOf="@+id/tv_starttimelabel"
                android:layout_marginTop="4dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_arrival_time"
                android:fontFamily="@font/gotham"
                android:layout_below="@id/tv_traindest"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_travel_time_label"
                android:layout_below="@+id/tv_starttimelabel"
                android:text="Travel Time: "
                android:fontFamily="@font/gotham"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tv_travel_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham"
                android:layout_toRightOf="@+id/tv_travel_time_label"
                android:layout_below="@id/tv_starttimelabel"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>